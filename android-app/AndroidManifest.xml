<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.opendataspace.android.app"
    android:versionCode="2"
    android:versionName="${project.version}" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="org.opendataspace.android.app.AlfrescoApplication"
        android:allowBackup="false"
        android:configChanges="orientation|keyboardHidden"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_alfresco_logo"
        android:label="@string/app_name"
        android:logo="@drawable/ic_alfresco"
        android:theme="@style/alfrescotheme" >

        <!-- *************************************************************** -->
        <!-- ALFRESCO APP -->
        <!-- *************************************************************** -->
        <activity
            android:name="org.opendataspace.android.app.activity.HomeScreenActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >

            <!-- Internal : Sign up cloud -->
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.VIEW" />

                <data
                    android:host="sign_up_cloud"
                    android:scheme="alfresco" />
            </intent-filter>
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.VIEW" />

                <data
                    android:host="view_help_guide"
                    android:scheme="alfresco" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="org.opendataspace.android.app.activity.MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:logo="@drawable/ic_alfresco"
            android:uiOptions="splitActionBarWhenNarrow"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="org.opendataspace.android.app.intent.ACTION_SYNCHRO_DISPLAY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <!-- Internal : Used for Cloud activation. Only for this part we have to use exported = true -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="activate-cloud-account"
                    android:scheme="alfresco" />
            </intent-filter>

            <!-- Internal : Sign up cloud -->
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.VIEW" />

                <data
                    android:host="sign_up_cloud_i"
                    android:scheme="alfresco" />
            </intent-filter>
        </activity>

        <!-- Private : Passcode Activity -->
        <activity
            android:name="org.opendataspace.android.app.security.PassCodeActivityityeActivity"
            android:exported="false"
            android:label="@string/app_name" />

        <!-- Private : Text Editor Activity -->
        <activity
            android:name="org.opendataspace.android.app.fragments.editor.TextEditorActivity"
            android:exported="false"
            android:label="@string/file_editor_name"
            android:uiOptions="splitActionBarWhenNarrow"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.EDIT" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/*" />
            </intent-filter>
        </activity>

        <!-- Public : Official entry point for 3rd party application -->
        <activity
            android:name="org.opendataspace.android.app.activity.PublicDispatcherActivity"
            android:exported="true"
            android:icon="@drawable/ic_alfresco_logo"
            android:label="@string/app_name"
            android:logo="@drawable/ic_alfresco_logo"
            android:theme="@style/alfrescotheme_popup" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <action android:name="android.intent.action.SEND_MULTIPLE" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="*/*" />
            </intent-filter>
        </activity>
        
        <!-- Internal : Activity As a Dialog -->
        <activity
            android:name="org.opendataspace.android.app.activity.PrivateDialogActivity"
            android:exported="false"
            android:icon="@drawable/ic_alfresco_logo"
            android:label="@string/settings"
            android:logo="@drawable/ic_alfresco_logo"
            android:theme="@style/alfrescotheme_popup" >
            <intent-filter>
                <action android:name="org.opendataspace.android.app.intent.ACTION_DISPLAY_SETTINGS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="org.opendataspace.android.app.intent.ACTION_DISPLAY_OPERATIONS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- *************************************************************** -->
        <!-- Internal : CONTENT PROVIDER -->
        <!-- *************************************************************** -->
        <provider
  			android:name="org.opendataspace.android.app.operations.sync.SynchroProvider"
            android:authorities="org.opendataspace.android.app.provider.sync"
            android:exported="false" />
        <provider
  			android:name="org.opendataspace.android.app.operations.batch.BatchOperationContentProvider"
            android:authorities="org.opendataspace.android.app.provider.operations"
            android:exported="false" />
        <provider
            android:name="org.opendataspace.android.app.accounts.AccountProvider"
            android:authorities="org.opendataspace.android.app.provider.accounts"
            android:exported="false" />

        <!-- *************************************************************** -->
        <!-- Internal : SERVICES         -->
        <!-- *************************************************************** -->
        <!-- Private Service for background operations. -->
        <service
            android:name="org.opendataspace.android.app.operations.batch.BatchOperationService"
            android:exported="false" />
        
        <!-- Private Service for sync. -->
        <service
            android:name="org.opendataspace.android.app.operations.sync.SynchroServiceroService"
            android:exported="false" />
        
        <!-- Private Service for cleaning temporary data. -->
		<service
            android:name="org.opendataspace.android.app.security.DataCleanerService"
            android:exported="false" />
    </application>

</manifest>
